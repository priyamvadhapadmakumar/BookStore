
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary"><b> Inventory Item List </b></h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-success" asp-action="Upsert"><i class="fas fa-plus"></i> &nbsp; Create New Item</a>
        <!--class is using Font awesome software - which gives us icon - which we added to our project in
        startUp.cs file -->
    </div>
</div>

<br />
<div class="p-4 border rounded">
    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>Book Title</th>
                <th>Count</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>
@section Scripts{

    <script src="~/js/inventory.js"></script>
}
