@model BookStoreModels.Book

@{
    ViewData["Title"] = "Compare";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <title>Price Comparison</title>
</head>

<body>
    <!--https://www.geeksforgeeks.org/how-to-insert-a-javascript-variable-inside-href-attribute/-->


    <div class="row pl-2">
        <h5 class="text-muted">ISBN : @Model.ISBN</h5>
    </div>
    <div class="row pl-2">
        <h5 class="text-primary">Our Price: $@Model.Price</h5>
    </div>
    <div class="row pl-2">
        <h5 class="text-info">Status: </h5>
        <h5 class="text-success font-weight-bold">@Model.FoundStatus</h5>
    </div>
    <div class="row pl-2">
        <h5 class="text-secondary">Ebay's Price: $@Model.EbayPrice</h5><br />
        <p>
            <script>
                var urlPortion = "&_in_kw=1&_ex_kw=&_sacat=267&_udlo=&_udhi=&_ftrt=901&_ftrv=1&_sabdlo=&_sabdhi=&_samilow=&_samihi=&_sadis=15&_stpos=64093&_sargn=-1%26saslc%3D1&_salic=1&_sop=12&_dmd=1&_ipg=200&_fosrp=1";
                var loc = "https://www.ebay.com/sch/i.html?_nkw=" +@Model.ISBN +urlPortion;
            document.write('<a href="' + loc + '">  --> Click here to buy from Ebay! <-- </a>');
            </script>
        </p>
    </div>
    <div class="row pl-2">
        <h5 class="text-secondary"> Amazon </h5><br />
        <h5>
            <script>
            var urlPortion = "&s=relevanceexprank&Adv-Srch-Books-Submit.x=11&Adv-Srch-Books-Submit.y=13&unfiltered=1&ref=sr_adv_b";
            var loc = "https://www.amazon.com/s?i=stripbooks&rh=p_66%3A" +@Model.ISBN +urlPortion;
            document.write('<a href="' + loc + '">  --> Click here to buy from Amazon! <-- </a>');
            </script>
        </h5>

    </div>
    <div class="col-12 col-lg-3 offset-lg-1 text-lg-right">
        <img src="@Model.ImageUrl" width="100%" class="rounded" />
    </div>
</body>


